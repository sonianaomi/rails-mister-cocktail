<div class="col-sm-12">
  <h1>Cocktails</h1>
  <p><%= link_to 'New', new_cocktail_path, class: 'btn btn-primary' %></p>

  <table class="table table-striped">
    <thead>
      <tr>
        <th></th>
        <th>Name</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @cocktails.each do |cocktail| %>
        <tr>
          <td>
            <% if cocktail.photo.url %>
              <%= image_tag cocktail.photo.url(:small) %>
            <% else %>
              <div class="noimage text-center">Image</div>
            <% end %>
          </td>
          <td><%= cocktail.name %></td>
          <td class="text-center"><%= link_to 'Show', cocktail, class: 'btn btn-sm btn-default' %>
          <%= link_to 'Edit', edit_cocktail_path(cocktail), class: 'btn btn-sm btn-primary' %>
          <%= link_to 'Destroy', cocktail, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
